<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ product_title }}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4263eb;
            --secondary-color: #364fc7;
            --dark-color: #1e1e2d;
            --light-color: #f8f9fa;
            --success-color: #38b2ac;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f9fafb;
        }
        
        .hero-section {
            padding: 5rem 0;
            background-color: var(--light-color);
        }
        
        .features-section {
            padding: 4rem 0;
            background-color: white;
        }
        
        .cta-section {
            padding: 4rem 0;
            background-color: var(--light-color);
        }
        
        .price-tag {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--primary-color);
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 0.75rem 2rem;
            font-weight: 600;
        }
        
        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        .feature-item {
            margin-bottom: 1.5rem;
        }
        
        .feature-icon {
            color: var(--primary-color);
            margin-right: 0.5rem;
        }
        
        .product-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        footer {
            padding: 2rem 0;
            background-color: var(--dark-color);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">{{ heading }}</h1>
                    <h2 class="h3 text-secondary mb-4">{{ subheading }}</h2>
                    
                    <div class="mb-4">
                        <p class="lead">{{ pitch_paragraph_1 }}</p>
                        {% if pitch_paragraph_2 %}
                        <p class="lead">{{ pitch_paragraph_2 }}</p>
                        {% endif %}
                    </div>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="price-tag me-4">{{ price }}</div>
                        <!-- Stripe payment link button -->
                        <a href="{{ stripe_link }}" class="btn btn-primary btn-lg" target="_blank">
                            <i class="fas fa-credit-card me-2"></i>Buy Now
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    {% if product_image %}
                    <img src="{{ product_image }}" alt="{{ product_title }}" class="product-image">
                    {% else %}
                    <div class="bg-light p-5 text-center rounded">
                        <i class="fas fa-image fa-4x text-secondary"></i>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    
    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <h2 class="text-center mb-5">What You'll Get</h2>
            
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    {% if features %}
                    <div class="card border-0 shadow-sm p-4">
                        <ul class="list-unstyled">
                            {% for feature in features %}
                            <li class="feature-item">
                                <i class="fas fa-check-circle feature-icon"></i>
                                <span>{{ feature }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    
    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Start?</h2>
            <p class="lead mb-4">Transform your workflow today with {{ product_title }}</p>
            <!-- Stripe payment link button in CTA section -->
            <a href="{{ stripe_link }}" class="btn btn-primary btn-lg" target="_blank">
                <i class="fas fa-credit-card me-2"></i>Get {{ product_title }} for {{ price }}
            </a>
        </div>
    </section>
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; {{ year }} {{ author_name }}. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>Questions? <a href="mailto:{{ contact_email }}" class="text-white">{{ contact_email }}</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
